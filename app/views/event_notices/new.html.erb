<div class= "container">
    <h1>Event Mail</h1>
      <%= form_with url: group_event_notices_path(@group), method: :post, local: true do |f| %>
        <div class= "form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class= "form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>
        <div class= "form-group">
          <%= f.submit "Send", class: "btn btn-success" %>
        </div>
      <% end %>
</div>