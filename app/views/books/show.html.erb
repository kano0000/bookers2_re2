<div class= "container">
  <div class= "row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= render "users/info", user: @book.user%>
      <h2>New Book</h2>
        <%= render "form", book: @book %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
          </td>
          <td>
            <%= link_to book_path(@book) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td>
            <%= @book.body %>
          </td>
        </tr>
      </table>
    </div>  
  </div>
</div>